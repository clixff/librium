{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "./dist/**/*",
        "./node_modules/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": "warn",
        "brace-style": ["warn", "allman", { "allowSingleLine": true }],
        "@typescript-eslint/no-var-requires": "off"
    }
}